extends: default

rules:
  document-start: disable
  comments:
    min-spaces-from-content: 1 # Prettier interop
  indentation:
    spaces: 2
  line-length: disable
  quoted-strings:
    quote-type: double
    required: only-when-needed
    allow-quoted-quotes: true
    check-keys: true
  truthy:
    check-keys: false
